<!DOCTYPE html>
<html lang="es">

<head>

    <%- include("../partials/head-admin") -%>

    <link rel="stylesheet" href="../../../styles/admin-results.css">
</head>

<body class="body__edit__product">

    <%- include("../admin/admi-nav") -%>


    <div id="container-admin">

        <%- include("../partials/aside-admin") -%>

        <main id="content_result">

            <p id="admin-welcome">Resultados de búsqueda</p>

            <main id="container_result">
                <% if (products.length > 0) { %>

                <% products.forEach(element => { %>
                <div class="card">
                    <figure class="img-container">
                        <img class="img-0" src="/images/imgs-bg/bg-product.png" alt="background-product">
                        <!-- FONDO DEL PRODUCTO -->
                        <img class="img-1" src="/images/imgs-product/<%- element.images %> " alt="product">
                        <!-- IMAGEN DEL PRODUCTO -->
                    </figure>
                    <hr>


                    <div class="text-card">
                        <h2 class="name-card"><%= element.product_name.slice(0,13) %></h2>
                        <h2 class="number-card">$<%= element.price %></h2>
                        <p class="description-card">
                            Marca: <%= element.brand.brand_name %> <br>
                            Categoria: <%= element.category.category_name %> <br>
                            Descripción: <%= element.description.slice(0,45) %>...
                        </p>



                        <a class="mas" href="/administrador/formulario-editar-producto/<%= element.id %>"> <i
                                class="fas fa-pencil-alt"></i> </a>

                        <form class="form__transparent"
                            action="/administrador/eliminar-producto/<%= element.id %>?_method=DELETE" method="POST">
                            <button id="delete-product" type="submit">
                                <i class="fas fa-times"></i>
                            </button>
                        </form>
                    </div>
                </div>
                <% }) %>
                <% } else { %>
                <div class="col-12">
                    <h1 class="product-not">
                        No hay producto que coincidan con tu búsqueda.
                    </h1>
                </div>
                <% } %>
            </main>

        </main>

    </div>
    <%- include("../partials/admin-links") -%>

    <%- include('../partials/scripts.ejs') %>

</body>

</html>