<!DOCTYPE html>
<html lang="en">

<head>
    <%- include("../partials/head-admin") -%>
        <link rel="stylesheet" href="../../../styles/admin-add-product.css">
</head>

<body class="admin__add__product">

    <%- include("../admin/admi-nav") -%>

        <div id="container-admin">

            <%- include("../partials/aside-admin") -%>

                <main id="content">

                    <p id="admin-welcome">
                        Agregar productos
                    </p>

                    <div id="container-form">

                        <form id="form-add" action="/administrador/agregar-producto" enctype="multipart/form-data"
                            method="POST">

                            <div class="input-file">
                                <button class="btn__update__image">
                                    <p class="userUpdate_subtitle">Agregar imagen del Producto</p>
                                    <input type="file" name="product-image" multiple>
                                </button>
                            </div>

                            <div id="categorias">

                                <select name="brand" id="categorias-select"> 
                                    <option value="#" selected disabled>Marca...</option>
                                    <% marcas.forEach(brand=> { %>
                                        <option value="<%= brand.id %>" >
                                            <%= brand.brand_name %>
                                        </option>
                                        <% }) %>
                                    </select>
                                    
                                </div> 
                                <div id="categorias">
                                    
                                    <select name="category" id="categorias-select"> 
                                        <option value="#" selected disabled>Categoría...</option>
                                        <% categorias.forEach(category=> { %>
                                            <option value="<%= category.id %>" >
                                                <%= category.category_name %>
                                            </option>
                                            <% }) %>
                                        </select>
                                        
                                    </div>


                            <input type="text" name="product" id="" value="<%= locals.old && old.product %>"
                                placeholder="Producto">
                            <% if (locals.errors && errors.product) { %>
                                <small style="color: red;">
                                    <%= errors.product.msg %>
                                </small>
                                <% } %>
                                    <input type="number" name="price" value="<%= locals.old && old.price %>" id=""
                                        placeholder="Precio">
                                    <% if (locals.errors && errors.price) { %>
                                        <small style="color: red;">
                                            <%= errors.price.msg %>
                                        </small>
                                        <% } %>
                                            <input type="text" name="color" id="" value="<%= locals.old && old.color %>"
                                                placeholder="Color/es">
                                            <% if (locals.errors && errors.color) { %>
                                                <small style="color: red;">
                                                    <%= errors.color.msg %>
                                                </small>
                                                <% } %>
                                                    <input type="text" name="description" id="descripcion"
                                                        value="<%= locals.old && old.description %>"
                                                        placeholder="Descripción">
                                                    <% if (locals.errors && errors.description) { %>
                                                        <small style="color: red;">
                                                            <%= errors.description.msg %>
                                                        </small>
                                                        <% } %>



                                                            <input class="submit" type="submit" value="Añadir">
                        </form>

                    </div>

                </main>

        </div>

        <%- include("../partials/admin-links") -%>

            <%- include('../partials/scripts.ejs') %>

</body>

</html>