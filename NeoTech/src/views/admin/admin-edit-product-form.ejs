<!DOCTYPE html>
<html lang="es">
<head>
    <%- include("../partials/head-admin") %> 
    <link rel="stylesheet" href="../../../styles/admin-edit-product-form.css">
</head>
<body>
    
    <%- include("../admin/admi-nav") -%>

    
    <div id="container-admin">

            <%- include("../partials/aside-admin") -%>
            

        <main id="content">
            <p id="admin-welcome">
                Estas editando: <%= product.trademark %>
            </p>

            <div id="container-form">         

                <form id="form-add" action="/administrador/formulario-editar-producto/<%= product.id %>?_method=PUT" method="POST" enctype="multipart/form-data">
        
                    <div style="text-align: center;">
                        <img id="description" src="/images/imgs-product/<%= product.image %>" alt="imagen del producto">
                    </div>
                    <input type="file" name="product-image" id="t-file" multiple>
                    <input type="text" name="productName" id="" value="<%= product.product %>" placeholder="Producto">
                    <input type="text" name="trademark" id="" value="<%= product.trademark %>" placeholder="Marca">
                    <input type="number" name="price" id="" value="<%= product.price %>" placeholder="Precio"> 
                    
                    <div id="categorias">
                       
                        <label id="label-categoria" for="form-add">CATEGORIA</label>
                        <select name="category" id="categorias-select"> 
                                    <option value="Monitores" <%= product.category == "Monitor" ? "selected" : "" %> >Monitores</option>
                                    <option value="Audio" <%= product.category == "Audio" ? "selected" : "" %> >Audio</option>
                                    <option value="Teclados" <%= product.category == "Teclado" ? "selected" : "" %> >Teclados</option>
                                    <option value="Mouse" <%= product.category == "Mouse" ? "selected" : "" %> >Mouse</option>
                                    <option value="Gaming" <%= product.category == "Gaming" ? "selected" : "" %> >Gaming</option>
                        </select>
                        
                    </div> 
                    
                    <input type="text" name="color" id="" value="<%= product.color %>" placeholder="Color/es">
                    <input type="text" name="description" id="description" value="<%= product.description %>" placeholder="Descripcion"> 

                    <button class="submit" type="submit" value="Guardar">Guardar</button>
               
                </form>
                
        
            </div>

        </main>

    </div>
    <%- include("../partials/admin-links") -%>

    <%- include('../partials/scripts') -%>

</body>
</html>