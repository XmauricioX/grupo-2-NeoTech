<!DOCTYPE html>
<html lang="es">
<head>
    <%- include("../partials/head-admin") %> 
    <link rel="stylesheet" href="../../../styles/admin-edit-product-form.css">
</head>
<body>
    
    <%- include("../admin/admi-nav") -%>

    
    <div id="container-admin">

            <%- include("../partials/aside-admin") -%>
            

        <main id="content">
            <p id="admin-welcome">
                Estas editando: <%= product.trademark %>
            </p>

            <div id="container-form">         

                <form id="form-add" action="/administrador/formulario-editar-producto/<%= product.id %>?_method=PUT" method="POST" enctype="multipart/form-data">
        
                    <div style="text-align: center;">
                        <img id="description" src="/images/imgs-product/<%= product.image %>" alt="imagen del producto">
                    </div>
                    <input type="file" name="product-image" id="t-file" multiple>

                    <input type="text" name="trademark" id="" value="<%= product.trademark %>">
                    <input type="number" name="price" id="" value="<%= product.price %>"> 
                    
                    <div id="categorias">
                        
                        <label id="label-categoria" for="form-add">CATEGORIA</label>
                        <select name="category" id="categorias-select"> 
                            <% if(product.category == "gabinete" ){ %>
                                    <option selected value="gabinete">Gabinete</option>
                                    <option value="monitor">Monitor</option>
                                    <option value="auricular">Ariculares</option>
                                    <option value="teclado">Teclado</option>
                                    <option value="mouse">Mouse</option>
                                    <option value="joystick">Joystick</option>
                                <% }else if(product.category == "monitor"){ %>
                                    <option value="gabinete">Gabinete</option>
                                    <option selected value="monitor">Monitor</option>
                                    <option value="auricular">Ariculares</option>
                                    <option value="teclado">Teclado</option>
                                    <option value="mouse">Mouse</option>
                                    <option value="joystick">Joystick</option>
                                <% }else if(product.category == "mouse"){%>
                                    <option value="gabinete">Gabinete</option>
                                    <option value="monitor">Monitor</option>
                                    <option value="auricular">Ariculares</option>
                                    <option value="teclado">Teclado</option>
                                    <option selected value="mouse">Mouse</option>
                                    <option value="joystick">Joystick</option>
                                <% }else if(product.category == "auriculares"){ %>
                                    <option value="gabinete">Gabinete</option>
                                    <option value="monitor">Monitor</option>
                                    <option selected value="auricular">Ariculares</option>
                                    <option value="teclado">Teclado</option>
                                    <option value="mouse">Mouse</option>
                                    <option value="joystick">Joystick</option>
                                <% }else if(product.category == "joystick"){ %>
                                    <option value="gabinete">Gabinete</option>
                                    <option value="monitor">Monitor</option>
                                    <option value="auricular">Ariculares</option>
                                    <option value="teclado">Teclado</option>
                                    <option value="mouse">Mouse</option>
                                    <option selected value="joystick">Joystick</option>
                                <% }else if(product.category == "teclado"){ %>
                                    <option value="gabinete">Gabinete</option>
                                    <option value="monitor">Monitor</option>
                                    <option value="auricular">Ariculares</option>
                                    <option selected value="teclado">Teclado</option>
                                    <option value="mouse">Mouse</option>
                                    <option value="joystick">Joystick</option>
                            <% } %>
                        </select>
                        
                    </div> 
                    
                    <input type="text" name="color" id="" value="<%= product.color %>" placeholder="color/es">
                    <input type="text" name="description" id="description" value="<%= product.description %>"> 

                    <button class="submit" type="submit" value="Guardar">Guardar</button>
               
                </form>
                
        
            </div>

        </main>

    </div>
    <%- include("../partials/admin-links") -%>

    <%- include('../partials/scripts') -%>

</body>
</html>