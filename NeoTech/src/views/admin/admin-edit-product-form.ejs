<!DOCTYPE html>
<html lang="es">
<head>
    <%- include("../partials/head-admin") %> 
    <link rel="stylesheet" href="../../../styles/admin-edit-product-form.css">
     <!-- Validation Front Admin -->
     <script src="/js/validationProducts.js"></script>
</head>
<body>
    
    <%- include("../admin/admi-nav") -%>
    
    <div id="container-admin">
        
        <%- include("../partials/aside-admin") -%>
        
        <main id="content">
            <p id="admin-welcome">
                Estas editando: <%= product.product_name %>
            </p>
            
            <div id="container-form">         
                
                <form id="form-add" action="/administrador/formulario-editar-producto/<%= product.id %>?_method=PUT" method="POST" enctype="multipart/form-data">
                    
                    <div style="text-align: center;">
                        <img id="description" src="/images/imgs-product/<%= product.images %>" alt="imagen del producto">
                    </div>
                    
                    <div class="input-file">
                        <button class="btn__update__image">
                            <p class="userUpdate_subtitle">Cambiar imagen de Producto</p>
                            <input type="file" name="product-image" multiple>
                        </button>
                    </div>

                    <div id="categorias">

                        <select name="brand" id="categorias-select"> 
                            <option value="#" selected disabled>Marca...</option>
                            <% brands.forEach(brand=> { %>
                                <option value="<%= brand.id %>" >
                                    <%= brand.brand_name %>
                                </option>
                                <% }) %>
                            </select>
                            
                        </div> 
                        <div id="categorias">
                            
                            <select name="category" id="categorias-select"> 
                                <option value="#" selected disabled>Categor√≠a...</option>
                                <% categories.forEach(category=> { %>
                                    <option value="<%= category.id %>" >
                                        <%= category.category_name %>
                                    </option>
                                    <% }) %>
                                </select>
                                
                            </div> 
                            

                            <input type="text" name="product" id="" value="<%= product.product_name %>" value="<%= locals.old ? old.product_name : product.product_name %>" placeholder="Producto">
                            <% if (locals.errors && errors.product) { %>
                                <small class="text-error"><%= errors.product.msg %> </small>
                                <% } %>
                                <input type="number" name="price" id="" value="<%= product.price %>" placeholder="Precio"> 
                    <% if (locals.errors && errors.price) { %>
                        <small class="text-error"><%= errors.price.msg %> </small>
                       <% } %>


                    <input type="text" name="color" id="" value="<%= product.color %>" placeholder="Color/es">
                    <% if (locals.errors && errors.color) { %>
                        <small class="text-error"><%= errors.color.msg %> </small>
                       <% } %>
                    <input type="text" name="description" id="description" value="<%= product.description %>" placeholder="Descripcion"> 
                    <% if (locals.errors && errors.description) { %>
                        <small class="text-error"><%= errors.description.msg %> </small>
                       <% } %>
                    <button class="submit" type="submit" value="Guardar">Guardar</button>
               
                </form>
                
        
            </div>

        </main>

    </div>
    <%- include("../partials/admin-links") -%>

    <%- include('../partials/scripts') -%>

</body>
</html>