<!DOCTYPE html>
<html lang="es">

<head>

    <%- include("../partials/head-admin") -%>

        <link rel="stylesheet" href="../../../styles/admin-edit-product.css">
</head>

<body class="body__edit__product">

    <%- include("../admin/admi-nav") -%>


        <div id="container-admin">

            <%- include("../partials/aside-admin") -%>




                <div id="content">
                    <p id="admin-welcome">
                        Edici√≥n de producto
                    </p>

                    <div id="container">

                        <% products.forEach(element=> { %>
                            <div class="card">

                                <figure class="img-container">
                                    <img class="img-0" src="/images/imgs-bg/bg-product.png" alt="background-product">
                                    <!-- FONDO DEL PRODUCTO -->
                                    <img class="img-1" src="/images/imgs-product/<%- element.image %> " alt="product">
                                    <!-- IMAGEN DEL PRODUCTO -->
                                </figure>
                                <hr>

                                <a class="mas" href="/administrador/formulario-editar-producto/"><i
                                        class="fas fa-pencil-alt"></i></a>

                                <form action="/administrador/eliminar-producto/<%= element.id %>?_method=DELETE"
                                    method="POST">
                                    <button id="delete-product" type="submit">
                                        <i class="fas fa-times"></i>
                                    </button>
                                </form>
                                <div class="text-card">
                                    <h2 class="name-card">
                                        <%= element.product %>
                                    </h2>
                                    <p class="description-card"> Marca: <%= element.trademark %> <br> Color: <%=
                                                element.color %>
                                    </p>

                                    <a class="mas" href="/administrador/formulario-editar-producto/"> <i
                                            class="fas fa-pencil-alt"></i> </a>
                                    <form class="delete-content"
                                        action="/administrador/eliminar-producto/<%= element.id %>?_method=DELETE"
                                        method="POST">
                                    </form>

                                </div>
                            </div>
                            <% }) %>
                    </div>
                </div>
        </div>
        <%- include("../partials/admin-links") -%>

            <%- include('../partials/scripts.ejs') %>

</body>

</html>