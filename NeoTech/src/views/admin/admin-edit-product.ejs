<!DOCTYPE html>
<html lang="es">
<head>

    <%- include("../partials/head-admin") -%>

    <link rel="stylesheet" href="../../../styles/admin-edit-product.css">
</head>
<body class="body__edit__product">
    
    <%- include("../admin/admi-nav") -%>

    
    <div id="container-admin">

        <%- include("../partials/aside-admin") -%>

        <main id="content">
            <p id="admin-welcome">
                Edici√≥n de proucto
            </p>

            <form id="form-edit-product" action="" method="">
                <input type="search" placeholder="Buscar producto"><i class="fas fa-search"></i>
            </form>

            <main id="container">
                
                <% products.forEach(element => { %>
                <div class="card">
                    
                    <figure class="img-container">
                        <img class="img-0" src="/images/imgs-bg/bg-product.png" alt="background-product">
                        <!-- FONDO DEL PRODUCTO -->
                        <img class="img-1" src="/images/imgs-product/<%- element.imagen %> " alt="product">
                        <!-- IMAGEN DEL PRODUCTO -->
                    </figure>
                    <hr>
        
                    <div class="text-card">
                        <h2 class="name-card"><%= element.producto %></h2>
                        <p class="description-card"> Marca: <%= element.marca %> <br> Color: <%= element.color %> </p>

                        <a class="mas" href="/administrador/formulario-editar-producto/"> <i class="fas fa-pencil-alt"></i> </a>
                       <form class="delete-content" action="/administrador/usuarios/<%= element.id %>?_method=DELETE" method="POST">
                        <button class="delete-product" type="submit">
                            <i id="delete-product" class="fas fa-times"></i>
                        </button>    
                        </form>
                         
                    </div>
                </div>               
                <% }) %>
            </main>

        </main>

    </div>
    <%- include("../partials/admin-links") -%>

    <%- include('../partials/scripts.ejs') %>

</body>
</html>