<!DOCTYPE html>
<html lang="en">

<head>
    <%- include("../partials/head-admin") -%>
        <link rel="stylesheet" href="../../../styles/admin-add-product.css">
</head>

<body class="admin__add__product">

    <%- include("../admin/admi-nav") -%>

        <div id="container-admin">

            <%- include("../partials/aside-admin") -%>

                <main id="content">

                    
                   
                    
                    <div id="container-form">
                        
                        <form id="form-add" action="/administrador/categorias" enctype="multipart/form-data"
                        method="POST">
                       
                            <input type="text" name="category" id="" value="<%= locals.old && old.product %>"
                                placeholder="Categoria">
                            
                                    <input class="submit" type="submit" value="Agregar">
                                    
                        </form>

                        <div>
                            <h3>Lista de Marcas</h3>

                        <% categorias.forEach(element => { %>
                            <%= element.category_name %> 
                            <form class="form__transparent" action="/administrador/categorias/<%= element.id %>?_method=DELETE" method="POST">
                                <button id="delete-product" type="submit">
                                    <i  class="fas fa-times"></i>
                                </button>    
                            </form>
                        <% }) %>
            </div>

                    </div>

                </main>

        </div>

        <%- include("../partials/admin-links") -%>

            <%- include('../partials/scripts.ejs') %>

</body>

</html>