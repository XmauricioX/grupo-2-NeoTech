<body id="product-list">


    <!-- <form class="form__product" action="" method="">
        <input type="search" placeholder="Buscar producto"><i class="fas fa-search"></i>
    </form>
 -->
    <main class="container__product">

        <% products.forEach(element => { %>
        <div class="card">

            <figure class="img-container">
                <img class="img-0" src="/images/imgs-bg/bg-product.png" alt="background-product">
                <!-- FONDO -->
                <a href="/producto/lista-de-productos/<%= element.id %>"><img class="img-1" src="/images/imgs-product/<%- element.image %> " alt="product"></a>
                <!-- PRODUCTO -->
            </figure>
            <hr>

            <div class="text-card">
                <h2 class="name-card"> <%= element.trademark %> </h2>
                <h2 class="number-card"> $<%= element.price %> </h2>
                <p class="description-card"> Modelo: <%= element.product %> <br> Color: <%= element.color %> </p>
                <a class="mas carrito" href="">
                    <i class="fas fa-shopping-cart">
                        <p class="masp ">a√±adir al carrito</p>
                    </i>
                </a>
                <form id="form-comprar" action="" method="post">
                    <a class="comprar " href="">COMPRAR</a>
                </form>
            </div>
        </div>
        <% }) %>

    </main>

    <%- include('../partials/scripts.ejs') %>
</body>
</html>