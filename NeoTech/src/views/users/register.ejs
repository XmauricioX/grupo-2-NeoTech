<!-- HEAD -->
<%- include('../partials/head.ejs') %>

    <body class="body__register">

        

        <%- include('../partials/nav.ejs') %>

            <!-- Registro -->
            <div id="registro">
                <h1>Registro</h1>
                <form class="register__form" action="/cuenta/registro" method="POST">
                    <nav class="register__container">
                        <!-- name -->
                        <label for="text"></label>
                        <input class="text" type="text" name="firstName" id="text" placeholder="Nombre">
                        <input class="text" type="text" name="lastName" id="text" placeholder="Apellido">
                        <!-- email -->
                        <label for="email"></label>
                        <input class="email" type="email" name="email" id="email" placeholder="Ingrese su email">
                        <!-- password -->
                        <label for="password"></label>
                        <input class="password" type="password" id="password" name="password" placeholder="Ingrese su contraseÃ±a">
                        <!-- button log in -->
                        <button class="button-register" type="submit" value="log-in">Registrarse</button>
                    </nav>
                </form>
            </div>

            <div class="networks">
                <!-- button facebook -->
                <button class="button-facebook"><img class="logo-face" src="/images/icons/icon-login-face.png"
                        alt="logo-face">Registrarse con Facebook</button>

                <!-- button google -->
                <button class="button-google"><img class="logo-google" src="/images/icons/icon-login-google.png"
                        alt="logo-google">Registrarse con Google</button>
            </div>

        <%- include('../partials/footer.ejs') %>

        <%- include('../partials/scripts.ejs') %>
    </body>

</html>